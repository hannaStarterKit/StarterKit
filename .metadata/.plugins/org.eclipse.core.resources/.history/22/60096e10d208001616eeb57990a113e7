package com.capgemini.BowlingGameResultCalculator;

import java.awt.List;
import java.util.ArrayList;
import java.util.Collection;

/**
 * @author HSIENKIE
 *
 */
public class BowlingGame implements BolwingGameResultCalculator {

	private static final int MAX_TO_CALCULATE_RESULT = 3;
	/**
	 * 
	 */
	// czy mozna uzywac liczby mnogiej w nazwach zmiennych?
	private ArrayList<Frame> next3Frame;

	public BowlingGame() {
		// TODO Auto-generated constructor stub
		next3Frame = new ArrayList<Frame>(MAX_TO_CALCULATE_RESULT);//jak sie zmieni ilosc rzutow to moze sie rowniez zmienic ilosc potrzebnych kolejnych framow
		

	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see
	 * com.capgemini.BowlingGameResultCalculator.BolwingGameResultCalculator#
	 * roll(int)
	 */
	public void roll(int numberOfPins) {
		// TODO HS jesli wieksza od 10, albo mniejsza od jeden to wyjatek
		if (!next3Frame.AmIFinished()) {
			next3Frame.setKnockedPins(numberOfPins);
		}
		else {
			
		}//wyjatek
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see
	 * com.capgemini.BowlingGameResultCalculator.BolwingGameResultCalculator#
	 * score()
	 */
	public int score() { // Integer to int
		// TODO Auto-generated method stub
		return next3Frame.sumOfKnockedPins();
	}

	/*
	 * (non-Javadoc)
	 * 
	 * @see
	 * com.capgemini.BowlingGameResultCalculator.BolwingGameResultCalculator#
	 * isFinshed()
	 */
	public boolean isFinshed() {
		// TODO Auto-generated method stub
		return false;
	}

}
